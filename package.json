{
  "name": "zero-circle",
  "version": "1.0.0",
  "description": "ZeroCircle - Ứng dụng thiền & Phật pháp",
  "private": true,
  "workspaces": [
    "src/frontend",
    "src/backend",
    "src/backend/apps/*",
    "src/backend/libs/*",
    "src/shared"
  ],
  "scripts": {
    "start:frontend": "cd src/frontend && npm start",
    "start:backend": "cd src/backend && npm run start:dev",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build:frontend": "cd src/frontend && npm run build",
    "build:backend": "cd src/backend && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend",
    "test:frontend": "cd src/frontend && npm test",
    "test:backend": "cd src/backend && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "lint:frontend": "cd src/frontend && npm run lint",
    "lint:backend": "cd src/backend && npm run lint",
    "lint:all": "npm run lint:backend && npm run lint:frontend",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "concurrently": "^8.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/zero-circle.git"
  },
  "author": "ZeroCircle Team",
  "license": "UNLICENSED"
}